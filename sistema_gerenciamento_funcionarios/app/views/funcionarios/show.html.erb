<!-- app/views/funcionarios/show.html.erb -->

<h1><%= @funcionario.nome_completo %></h1>
<p>
  <strong>CPF:</strong>
  <%= @funcionario.cpf %>
</p>
<p>
  <strong>Email:</strong>
  <%= @funcionario.email %>
</p>
<p>
  <strong>Data de Nascimento:</strong>
  <%= @funcionario.data_nascimento.strftime("%d/%m/%Y") %>
</p>
<p>
  <strong>Data de Contratação:</strong>
  <%= @funcionario.data_contratacao.strftime("%d/%m/%Y") %>
</p>
<p>
  <strong>Salário:</strong>
  <%= number_to_currency(@funcionario.salario) %>
</p>
<p>
  <strong>Status:</strong>
  <%= @funcionario.status %>
</p>

<!-- Endereços do Funcionário -->
<% if @funcionario.enderecos.any? %>
  <h2>Endereços</h2>
  <ul>
    <% @funcionario.enderecos.each do |endereco| %>
      <li>
        <strong>Rua:</strong> <%= endereco.rua %>, 
        <strong>Número:</strong> <%= endereco.numero %>, 
        <strong>Bairro:</strong> <%= endereco.bairro %>, 
        <strong>Cidade:</strong> <%= endereco.cidade %>, 
        <strong>Estado:</strong> <%= endereco.estado %>, 
        <strong>CEP:</strong> <%= endereco.cep %>
      </li>
    <% end %>
  </ul>
<% end %>

<p>
  <strong>Cargo:</strong>
  <%= @funcionario.cargo.nome %>
</p>

<%= link_to 'Editar', edit_funcionario_path(@funcionario) %> |
<%= link_to 'Voltar', funcionarios_path %>
