<h1>Editar Funcionário</h1>

<%= form_with(model: @funcionario, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :nome_completo %>
    <%= form.text_field :nome_completo, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :data_nascimento %>
    <%= form.date_field :data_nascimento, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :genero %>
    <%= form.select :genero, options_for_select([['Masculino', 'Masculino'], ['Feminino', 'Feminino'], ['Outro', 'Outro']], @funcionario.genero), { prompt: 'Selecione o Gênero' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cpf %>
    <%= form.text_field :cpf, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :rg %>
    <%= form.text_field :rg, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :telefone %>
    <%= form.text_field :telefone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cargo_id %>
    <%= form.collection_select :cargo_id, Cargo.all, :id, :nome, prompt: 'Selecione um Cargo', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :data_contratacao %>
    <%= form.date_field :data_contratacao, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :salario %>
    <%= form.number_field :salario, step: '0.01', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Funcionario.statuses.keys.map { |status| [status.humanize, status] }, {}, class: 'form-control' %>
  </div>

  <h3>Endereços</h3>

  <div id="enderecos">
    <%= form.fields_for :enderecos do |endereco_form| %>
      <div class="form-group">
        <%= endereco_form.label :rua %>
        <%= endereco_form.text_field :rua, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= endereco_form.label :numero %>
        <%= endereco_form.text_field :numero, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= endereco_form.label :bairro %>
        <%= endereco_form.text_field :bairro, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= endereco_form.label :cidade %>
        <%= endereco_form.text_field :cidade, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= endereco_form.label :estado %>
        <%= endereco_form.text_field :estado, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= endereco_form.label :cep %>
        <%= endereco_form.text_field :cep, class: 'form-control' %>
      </div>

      <%= link_to 'Remover Endereço', '#', class: 'remove_fields', data: {id: endereco_form.object.id} %>
    <% end %>
  </div>

  <%= form.submit 'Atualizar Funcionário', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Voltar', funcionario_path(@funcionario), class: 'btn btn-secondary' %>

