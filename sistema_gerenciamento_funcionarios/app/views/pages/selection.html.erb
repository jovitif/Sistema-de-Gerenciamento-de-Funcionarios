<!-- app/views/pages/selection.html.erb -->

<% if user_signed_in? %>
  <div class="user-info-container">
    <div class="user-info-left">
      <strong class="user-email"><%= current_user.email %></strong>
      <div class="user-details">
        <span class="user-name"><%= current_user.nome %></span>
        <span class="user-role"><%= current_user.role.humanize %></span>
      </div>
    </div>
    <div class="user-info-right">
      <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "logout-link" %>
    </div>
  </div>
<% end %>



<h1 style="text-align: center;">Selecione uma Opção</h1>

<div class="card-container" style="display: flex; justify-content: center; gap: 20px; flex-wrap: wrap;">


<!-- Card para Departamentos -->
  <div class="card" style="border: 1px solid #ddd; padding: 20px; text-align: center; width: 200px;">
    <%= link_to departamentos_path, style: "text-decoration: none;" do %>
      <%= image_tag 'departamentos.png', alt: 'Departamentos', style: 'width: 100%; height: auto;' %>
      <h2>Departamentos</h2>
    <% end %>
  </div>


  <!-- Card para Cargos -->
  <div class="card" style="border: 1px solid #ddd; padding: 20px; text-align: center; width: 200px;">
    <%= link_to cargos_path, style: "text-decoration: none;" do %>
      <%= image_tag 'cargos.png', alt: 'Cargos', style: 'width: 100%; height: auto;' %>
      <h2>Cargos</h2>
    <% end %>
  </div>

  <!-- Card para Funcionários -->
  <div class="card" style="border: 1px solid #ddd; padding: 20px; text-align: center; width: 200px;">
    <%= link_to funcionarios_path, style: "text-decoration: none;" do %>
      <%= image_tag 'funcionarios.png', alt: 'Funcionários', style: 'width: 100%; height: auto;' %>
      <h2>Funcionários</h2>
    <% end %>
  </div>

  <% if current_user.admin? %>
  <div class="card" style="border: 1px solid #ddd; padding: 20px; text-align: center; width: 200px;">
    <%= link_to users_path , style: "text-decoration: none;" do %> <!-- Redireciona para a lista de usuários -->
      <%= image_tag 'user.png', alt: 'Usuários', style: 'width: 100%; height: auto;' %>
      <h2>Usuários</h2>
    <% end %>
  </div>
<% end %>


</div>


